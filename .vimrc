execute pathogen#infect()

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
set splitbelow
set splitright

map <C-+> <C-W>+
map <C--> <C-W>-
map <C-<> <C-W><
map <C->> <C-W>>

filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

set number
syntax enable
colorscheme monokai
